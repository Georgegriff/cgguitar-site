---
# Metadata comes from _data/metadata.json
permalink: "public/{{ metadata.manifest.path | url }}"
eleventyExcludeFromCollections: true
---
{
    "name": "{{metadata.title}}",
    "short_name": "{{metadata.title}}",
    "start_url": "/",
    "display": "standalone",
    "orientation": "portrait",
    "theme_color": "#ffffff",
    "background_color": "#ffffff",
    "icons": [{
            "src": "{%- ImageUrl "images/manifest/icon-192x192.png", [192], "public/" %}",
            "sizes": "192x192",
            "type": "image/png"
        },
        {
            "src": "{%- ImageUrl "images/manifest/icon-512x512.png", [512], "public/" %}",
            "sizes": "512x512",
            "type": "image/png"
        }
    ]
}
